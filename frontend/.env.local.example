# ============================================
# DEMO MODE (for GitHub Pages deployment)
# ============================================
# Set to 'true' to use localStorage instead of blockchain/IPFS
NEXT_PUBLIC_DEMO_MODE=true

# ============================================
# PRODUCTION MODE (with real blockchain)
# ============================================
# When DEMO_MODE is false, configure these:

# IPFS Gateway URL
NEXT_PUBLIC_IPFS_GATEWAY=http://localhost:8080

# Subgraph URL
NEXT_PUBLIC_SUBGRAPH_URL=http://localhost:8000/subgraphs/name/constituicao-2-0

# RPC URL
NEXT_PUBLIC_RPC_URL=http://localhost:8545

# Chain ID (31337 = Anvil local, 11155111 = Sepolia)
NEXT_PUBLIC_CHAIN_ID=31337

# Contract Addresses (atualizar ap√≥s deploy)
NEXT_PUBLIC_VOTING_CONTRACT=0x5FbDB2315678afecb367f032d93F642f64180aa3
NEXT_PUBLIC_TOKEN_CONTRACT=0xe7f1725E7734CE288F8367e1Bb143E90bb3F0512

# WalletConnect Project ID (criar em https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_project_id_here

# Analytics (opcional)
NEXT_PUBLIC_GOOGLE_ANALYTICS=
